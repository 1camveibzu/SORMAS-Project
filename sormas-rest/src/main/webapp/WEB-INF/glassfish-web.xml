<glassfish-web-app>
	<!-- @see https://docs.oracle.com/cd/E18930_01/html/821-2418/beacr.html -->
    <security-role-mapping>
    	<!-- all groups map to user -->
        <role-name>USER</role-name>
        <!-- officially only officers and informants have access
        <group-name>ADMIN</group-name>
        <group-name>SURVEILLANCE_SUPERVISOR</group-name>
        <group-name>CASE_SUPERVISOR</group-name>
        <group-name>CONTACT_SUPERVISOR</group-name>
        <group-name>RUMOR_MANAGER</group-name>
        <group-name>LAB_USER</group-name>
         -->
        <group-name>SURVEILLANCE_OFFICER</group-name>
        <group-name>INFORMANT</group-name>
        <group-name>CASE_OFFICER</group-name>
        <group-name>CONTACT_OFFICER</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>ADMIN</role-name>
        <group-name>ADMIN</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>SURVEILLANCE_SUPERVISOR</role-name>
        <group-name>SURVEILLANCE_SUPERVISOR</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>SURVEILLANCE_OFFICER</role-name>
        <group-name>SURVEILLANCE_OFFICER</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>INFORMANT</role-name>
        <group-name>INFORMANT</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>CASE_SUPERVISOR</role-name>
        <group-name>CASE_SUPERVISOR</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>CASE_OFFICER</role-name>
        <group-name>CASE_OFFICER</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>CONTACT_SUPERVISOR</role-name>
        <group-name>CONTACT_SUPERVISOR</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>CONTACT_OFFICER</role-name>
        <group-name>CONTACT_OFFICER</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>RUMOR_MANAGER</role-name>
        <group-name>RUMOR_MANAGER</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>LAB_USER</role-name>
        <group-name>LAB_USER</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>NATIONAL_USER</role-name>
        <group-name>NATIONAL_USER</group-name>
    </security-role-mapping>
</glassfish-web-app>