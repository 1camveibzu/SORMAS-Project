<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>


        <variable name="data" type="de.symeda.sormas.app.backend.caze.Case"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <de.symeda.sormas.app.component.controls.ControlTextEditField
            android:id="@+id/txtHealthFacilityDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textControlMarginBottom"
            app:hint="@string/hint_case_health_facility_desc"
            app:labelCaption="@string/label_case_health_facility_desc"
            app:description="@string/desc_case_health_facility_desc"
            app:required="true"
            app:value="@={data.healthFacilityDetails}"
            app:imeOptions="actionNext"


            />

    </LinearLayout>

</layout>

