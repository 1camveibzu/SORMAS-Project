<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>
        <variable name="data" type="de.symeda.sormas.app.backend.event.EventParticipant"/>
        <variable name="presentConditionClass" type="Class" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/fragment_padding"
                android:paddingLeft="@dimen/fragment_padding"
                android:paddingRight="@dimen/fragment_padding"
                android:layout_marginBottom="@dimen/fragment_padding_negative"
                android:id="@+id/main_content">

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/eventParticipant_involvementDescription"
                    app:required="true"
                    app:value="@={data.involvementDescription}"
                    style="@style/ControlSingleColumnStyle" />

                <ImageView style="@style/FullHorizontalDividerStyle"/>

            </LinearLayout>

            <include
                android:id="@+id/eventParticipant_person_layout"
                layout="@layout/fragment_person_edit_layout"
                app:data="@{data.person}"
                app:presentConditionClass="@{presentConditionClass}" />

            <requestFocus/>

        </LinearLayout>

    </ScrollView>

</layout>

