<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>
        <import type="de.symeda.sormas.api.utils.YesNoUnknown" />
        <variable name="data" type="de.symeda.sormas.app.backend.event.EventParticipant"/>
        <!--<variable name="person" type="de.symeda.sormas.app.backend.person.Person"/>-->
        <variable name="presentConditionClass" type="Class" />
        <variable
            name="addressLinkCallback"
            type="de.symeda.sormas.app.core.IEntryItemOnClickListener" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/parentLayoutVerticalMargin"
                android:paddingLeft="@dimen/parentLayoutHorizontalPadding"
                android:paddingRight="@dimen/parentLayoutHorizontalPadding"
                >

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/eventParticipant_involvementDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:required="true"
                    app:value="@={data.involvementDescription}"
                    app:imeOptions="actionNext" />

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/eventParticipant_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:required="true"
                    app:value="@={data.person.firstName}"
                    app:imeOptions="actionNext" />

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/eventParticipant_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:required="true"
                    app:value="@={data.person.lastName}"
                    app:imeOptions="actionNext" />


            </LinearLayout>

            <ImageView style="@style/MiniHorizontalDividerStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/parentLayoutHorizontalPadding"
                android:paddingRight="@dimen/parentLayoutHorizontalPadding"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <de.symeda.sormas.app.component.controls.ControlTextEditField
                        android:id="@+id/person_nickname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/textControlMarginBottom"
                        app:value="@={data.person.nickname}"
                        app:imeOptions="actionNext" />


                    <de.symeda.sormas.app.component.controls.ControlTextEditField
                        android:id="@+id/person_mothersMaidenName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/textControlMarginBottom"
                        android:layout_marginStart="@dimen/formLayoutGutterSize"
                        app:value="@={data.person.mothersMaidenName}" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/form_p_date_of_birth"
                    style="@style/ControlLabelStyle"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <de.symeda.sormas.app.component.controls.ControlSpinnerField
                        android:id="@+id/person_birthdateYYYY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/textControlMarginBottom"
                        app:showCaption="false"
                        app:value="@={data.person.birthdateYYYY}" />


                    <de.symeda.sormas.app.component.controls.ControlSpinnerField
                        android:id="@+id/person_birthdateMM"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/textControlMarginBottom"
                        android:layout_marginStart="@dimen/formLayoutGutterSize"
                        app:showCaption="false"
                        app:value="@={data.person.birthdateMM}" />


                    <de.symeda.sormas.app.component.controls.ControlSpinnerField
                        android:id="@+id/person_birthdateDD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/textControlMarginBottom"
                        android:layout_marginStart="@dimen/formLayoutGutterSize"
                        app:showCaption="false"
                        app:value="@={data.person.birthdateDD}" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <de.symeda.sormas.app.component.controls.ControlTextReadField
                        android:id="@+id/person_approximateAge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/controlReadTextMarginBottom"
                        app:distinct="true"
                        app:value="@{data.person.approximateAge}"
                        app:appendValue="@{data.person.approximateAgeType.toString()}"
                        app:valueFormat="@{@string/two_strings_with_space_format}" />


                    <de.symeda.sormas.app.component.controls.ControlSpinnerField
                        android:id="@+id/person_approximateAgeType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/textControlMarginBottom"
                        android:layout_marginStart="@dimen/formLayoutGutterSize"
                        app:value="@={data.person.approximateAgeType}" />


                </LinearLayout>


                <de.symeda.sormas.app.component.controls.ControlSpinnerField
                    android:id="@+id/person_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:value="@={data.person.sex}" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <de.symeda.sormas.app.component.controls.ControlTextEditField
                        android:id="@+id/person_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/textControlMarginBottom"
                        app:value="@={data.person.phone}"
                        app:imeOptions="actionNext" />

                    <de.symeda.sormas.app.component.controls.ControlTextEditField
                        android:id="@+id/person_phoneOwner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/textControlMarginBottom"
                        android:layout_marginStart="@dimen/formLayoutGutterSize"
                        app:value="@={data.person.phoneOwner}" />

                </LinearLayout>

                <de.symeda.sormas.app.component.controls.ControlSwitchField
                    android:id="@+id/person_presentCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:enumClass="@{presentConditionClass}"
                    app:value="@={data.person.presentCondition}" />

            </LinearLayout>

            <include android:id="@+id/presentConditionInclude"
                layout="@layout/blank_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/textControlMarginBottom"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/parentLayoutHorizontalPadding"
                android:paddingRight="@dimen/parentLayoutHorizontalPadding"
                >

                <de.symeda.sormas.app.component.controls.ControlTextPopupField
                    android:id="@+id/person_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:iconStart="@drawable/ic_edit_location_black_24dp"
                    app:hint="@string/hint_enter_location"
                    app:locationValue="@={data.person.address}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/heading_sub_event_pinvolv_occupation"
                    style="@style/SubHeadingStyle"
                    />

                <de.symeda.sormas.app.component.controls.ControlSpinnerField
                    android:id="@+id/person_occupationType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:value="@={data.person.occupationType}" />

                <include android:id="@+id/occupationDetailsInclude"
                    layout="@layout/blank_layout"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>

