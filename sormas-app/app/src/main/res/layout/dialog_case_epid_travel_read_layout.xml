<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>
        <import type="de.symeda.sormas.app.component.controls.ControlButtonType" />

        <variable name="data" type="de.symeda.sormas.app.backend.epidata.EpiDataTravel" />
        <variable name="dismissCallback" type="de.symeda.sormas.app.util.Callback" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/fragment_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/heading_travel"
                    style="@style/SubHeadingStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.symeda.sormas.app.component.controls.ControlTextReadField
                        android:id="@+id/epiDataTravel_travelDateFrom"
                        app:value="@{data.travelDateFrom}"
                        style="@style/ControlFirstOfTwoColumnsStyle" />

                    <de.symeda.sormas.app.component.controls.ControlTextReadField
                        android:id="@+id/epiDataTravel_travelDateTo"
                        app:value="@{data.travelDateTo}"
                        style="@style/ControlSecondOfTwoColumnsStyle" />

                </LinearLayout>

                <de.symeda.sormas.app.component.controls.ControlTextReadField
                    android:id="@+id/epiDataTravel_travelType"
                    app:value="@{data.travelType}"
                    style="@style/ControlSingleColumnStyle" />

                <ImageView style="@style/FullHorizontalDividerStyle"/>

                <de.symeda.sormas.app.component.controls.ControlTextReadField
                    android:id="@+id/epiDataTravel_travelDestination"
                    app:maxLines="2"
                    app:value="@{data.travelDestination}"
                    style="@style/ControlSingleColumnStyle" />

            </LinearLayout>

            <ImageView style="@style/FullHorizontalDividerStyleNoDefaultMargin"/>

            <de.symeda.sormas.app.component.controls.ControlButton
                android:id="@+id/button_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/simple_dialog_button_margin"
                android:text="@string/action_dismiss"
                android:onClickListener="@{(view) -> dismissCallback.call()}"
                app:iconStart="@drawable/ic_clear_black_24dp"
                app:slim="true"
                app:buttonType="@{ControlButtonType.PRIMARY}" />

        </LinearLayout>

    </ScrollView>

</layout>