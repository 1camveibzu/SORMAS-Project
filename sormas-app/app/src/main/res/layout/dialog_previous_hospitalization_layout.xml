<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>
        <import type="de.symeda.sormas.api.utils.YesNoUnknown" />
        <variable name="data" type="de.symeda.sormas.app.backend.hospitalization.PreviousHospitalization"/>
        <variable name="config" type="de.symeda.sormas.app.component.dialog.DialogViewConfig"/>
        <variable
            name="showNotificationCallback"
            type="de.symeda.sormas.app.component.OnShowInputErrorListener" />
        <variable
            name="hideNotificationCallback"
            type="de.symeda.sormas.app.component.OnHideInputErrorListener" />
        <variable name="yesNoUnknownClass" type="Class" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/rowListItemHorizontalMargin"
            android:paddingRight="@dimen/rowListItemHorizontalMargin"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <de.symeda.sormas.app.component.TeboDatePicker
                    android:id="@+id/dtpDateOfAdmission"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:hint="@string/hint_case_hos_admission_date"
                    app:labelCaption="@string/label_case_hos_admission_date"
                    app:description="@string/desc_case_hos_admission_date"
                    app:required="true"
                    app:slim="true"
                    app:value="@={data.admissionDate}"
                    />

                <de.symeda.sormas.app.component.TeboDatePicker
                    android:id="@+id/dtpDateOfDischarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    android:paddingLeft="@dimen/formLayoutGutterSize"
                    app:hint="@string/hint_case_hos_admission_date"
                    app:labelCaption="@string/label_case_hos_admission_date"
                    app:description="@string/desc_case_hos_admission_date"
                    app:required="true"
                    app:slim="true"
                    app:value="@={data.dischargeDate}"
                    />

            </LinearLayout>

            <de.symeda.sormas.app.component.TeboSpinner
                android:id="@+id/spnState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/slimTextControlMarginBottom"
                app:slim="true"
                app:hint="@string/hint_case_state"
                app:description="@string/desc_case_state"
                app:labelCaption="@string/label_case_state"
                app:required="true"
                app:spinnerMode="dialog"
                app:nextFocusDown="@+id/spnLga"
                app:imeOptions="actionNext"
                app:value="@={data.region}"
                app:onShowInputErrorListener="@{showNotificationCallback}"
                app:onHideInputErrorListener="@{hideNotificationCallback}"
                />

            <de.symeda.sormas.app.component.TeboSpinner
                android:id="@+id/spnLga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/slimTextControlMarginBottom"
                app:slim="true"
                app:hint="@string/hint_case_lga"
                app:description="@string/desc_case_lga"
                app:labelCaption="@string/label_case_lga"
                app:required="true"
                app:spinnerMode="dialog"
                app:nextFocusDown="@+id/spnWard"
                app:imeOptions="actionNext"
                app:value="@={data.district}"
                app:onShowInputErrorListener="@{showNotificationCallback}"
                app:onHideInputErrorListener="@{hideNotificationCallback}"
                />

            <de.symeda.sormas.app.component.TeboSpinner
                android:id="@+id/spnWard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/slimTextControlMarginBottom"
                app:slim="true"
                app:hint="@string/hint_case_ward"
                app:description="@string/desc_case_ward"
                app:labelCaption="@string/label_case_ward"
                app:required="true"
                app:spinnerMode="dialog"
                app:nextFocusDown="@+id/spnCity"
                app:imeOptions="actionNext"
                app:value="@={data.community}"
                app:onShowInputErrorListener="@{showNotificationCallback}"
                app:onHideInputErrorListener="@{hideNotificationCallback}"
                />

            <de.symeda.sormas.app.component.TeboSpinner
                android:id="@+id/spnFacility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/slimTextControlMarginBottom"
                app:slim="true"
                app:hint="@string/hint_case_health_facility"
                app:description="@string/desc_case_health_facility"
                app:labelCaption="@string/label_case_health_facility"
                app:required="true"
                app:spinnerMode="dialog"
                app:nextFocusDown="@+id/spnCity"
                app:imeOptions="actionNext"
                app:value="@={data.healthFacility}"
                app:onShowInputErrorListener="@{showNotificationCallback}"
                app:onHideInputErrorListener="@{hideNotificationCallback}"
                />

            <de.symeda.sormas.app.component.TeboSwitch
                android:id="@+id/swhIsolation"
                android:layout_width="@dimen/teboSwitchMinWidth"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/textControlMarginBottom"
                app:paddingTop="@dimen/defaultControlVerticalPadding"
                app:paddingBottom="@dimen/defaultControlVerticalPadding"
                app:background="@drawable/control_switch_background_border"
                app:borderSize="@dimen/defaultControlStrokeWidth"
                app:textColor="@color/control_switch_color_selector"
                app:hint="@string/hint_case_hos_isolation"
                app:labelCaption="@string/label_case_hos_isolation"
                app:description="@string/desc_case_hos_isolation"
                app:required="true"
                app:orientation="horizontal"
                app:slim="true"
                app:includeUnknown="@{false}"
                app:enumClass="@{yesNoUnknownClass}"
                app:defaultValue="@{YesNoUnknown.UNKNOWN}"
                app:abbrevUnknown="@{false}"
                app:value="@={data.isolated}"
                app:onCheckedChangeListener="@{null}"
                app:onShowInputErrorListener="@{showNotificationCallback}"
                app:onHideInputErrorListener="@{hideNotificationCallback}"
                />

            <de.symeda.sormas.app.component.TeboTextInputEditText
                android:id="@+id/txtPrevHosDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/textControlMarginBottom"
                app:hint="@string/hint_case_hos_prev_desc"
                app:labelCaption="@string/label_case_hos_prev_desc"
                app:description="@string/desc_case_hos_prev_desc"
                app:required="true"
                app:slim="true"
                app:value="@={data.description}"
                app:nextFocusDown="@+id/txtControl1"
                app:imeOptions="actionNext"
                app:onShowInputErrorListener="@{showNotificationCallback}"
                app:onHideInputErrorListener="@{hideNotificationCallback}"
                />


        </LinearLayout>
    </ScrollView>
</layout>

