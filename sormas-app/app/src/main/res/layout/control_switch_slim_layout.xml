<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_list_activity_row_no_indicator"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        >

        <LinearLayout
            android:id="@+id/label_frame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label"
                style="@style/ControlLabelRowStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/input"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/required_indicator"
                style="@style/RequiredIndicatorStyle"/>

            <TextView
                android:id="@+id/soft_required_indicator"
                style="@style/SoftRequiredIndicatorStyle"/>

            <TextView
                android:id="@+id/warning_indicator"
                style="@style/WarningIndicatorStyle"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/input"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

    </LinearLayout>

</merge>
