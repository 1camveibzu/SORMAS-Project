<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center"
    android:background="@drawable/selector_sub_menu_item">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/navigationTitlePadding"
        android:paddingRight="@dimen/navigationTitlePadding"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/subMenuTitleTextSize"
        android:textAllCaps="true"
        android:textColor="@color/navigationTitle"
        android:textAlignment="center" />

</RelativeLayout>