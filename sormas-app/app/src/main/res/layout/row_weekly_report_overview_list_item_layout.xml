<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="data" type="de.symeda.sormas.app.report.viewmodel.WeeklyReportOverviewViewModel"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="fill"
        android:paddingLeft="@dimen/rowListItemHorizontalMargin"
        android:paddingRight="@dimen/rowListItemHorizontalMargin"
        android:background="@drawable/selector_list_activity_row_background"
        >

        <!---->
        <LinearLayout
            android:id="@+id/rowListItem"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill"
            android:layout_gravity="fill"
            android:paddingTop="@dimen/rowListItemVerticalPadding"
            android:paddingBottom="@dimen/rowListItemVerticalPadding"
            android:background="@drawable/background_list_activity_row_no_unread_status"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/listActivityRowTertiaryTextSize"
                    android:textColor="@color/listActivityRowTertiaryText"
                    android:fontFamily="sans-serif-medium"
                    app:value="@{data.numberOfCases}"
                    app:valueFormat="@{@string/number_of_cases_format}"
                    app:defaultValue='@{@string/no_of_cases_unknown}'
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginRight="36dp"
                    >
                    <!--<ImageView
                        android:id="@+id/imgConfirmedStatusIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        />-->

                    <TextView
                        android:id="@+id/txtTaskPriority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/contentHorizontalSpacing"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/listActivityRowStatusTextSize"
                        android:textAllCaps="true"
                        android:textColor="@color/listActivityRowStatusText"
                        android:fontFamily="sans-serif-medium"
                        app:value="@{data.reportedCaseStatus}"
                        app:defaultValue='@{@string/cases_confirmed_unknown}'
                        />

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/listActivityRowPrimaryTextSize"
                    android:textColor="@color/listActivityRowPrimaryText"
                    android:fontFamily="sans-serif-medium"
                    android:scrollHorizontally="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:userValue="@{data.user}"
                    app:defaultValue='@{@string/user_unknown}'
                    />

                <TextView
                    android:id="@+id/txtHealthFacility"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:layout_marginBottom="@dimen/listActivityRowSecondaryTextMarginBottom"
                    android:textSize="@dimen/listActivityRowSecondaryTextSize"
                    android:textColor="@color/listActivityRowSecondaryText"
                    android:scrollHorizontally="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:facilityValue="@{data.healthFacility}"
                    app:defaultValue='@{@string/health_facility_unknown}'
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/listItemBottomConentMarginTop"
                android:layout_marginRight="@dimen/listItemConentIndentRight"
                >

                <TextView
                    android:id="@+id/txtCreatorComment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top|left"
                    android:layout_marginRight="@dimen/formLayoutGutterSize"
                    android:textSize="@dimen/listActivityRowTertiaryTextSize"
                    android:textColor="@color/listActivityRowLeastText"
                    android:fontFamily="sans-serif-medium"
                    android:scrollHorizontally="true"
                    app:singleLine="false"
                    app:maxLines="2"
                    android:ellipsize="end"
                    app:value="@{data.userRole}"
                    app:defaultValue='@{@string/user_role_unknown}'
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>
