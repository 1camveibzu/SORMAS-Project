<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>
        <import type="android.view.View" />
        <import type="de.symeda.sormas.app.component.controls.ControlButtonType"/>
        <import type="java.lang.Object" />
        <variable name="data" type="Object"/>
        <variable name="config" type="de.symeda.sormas.app.component.dialog.DialogViewConfig"/>
        <variable name="dialog" type="de.symeda.sormas.app.component.dialog.BaseTeboAlertDialog" />
        <variable
            name="cancelCallback"
            type="de.symeda.sormas.app.component.dialog.IDialogCancelOnClickListener" />
        <variable
            name="createCallback"
            type="de.symeda.sormas.app.component.dialog.IDialogCreateOnClickListener" />
        <variable
            name="okCallback"
            type="de.symeda.sormas.app.component.dialog.IDialogOkOnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/rowListItemHorizontalMargin"
        android:paddingRight="@dimen/rowListItemHorizontalMargin"
        android:visibility="@{dialog.isButtonPanelVisible? View.VISIBLE : View.GONE}"
        >



        <de.symeda.sormas.app.component.controls.ControlButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_alignParentLeft="true"
            android:visibility="@{dialog.isCancelButtonVisible? View.VISIBLE : View.GONE}"
            android:text="@{config.cancelButtonText}"
            app:iconStart="@drawable/ic_cancel_create_new_case_black_24dp"
            app:buttonType="@{dialog.cancelButtonType}"
            app:rounded="@{dialog.isRounded}"
            app:slim="true"
            app:iconOnly="true"
            android:onClick="@{(view) -> cancelCallback.onCancelClick(view, data)}"
            />



        <de.symeda.sormas.app.component.controls.ControlButton
            android:id="@+id/btnCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_toLeftOf="@+id/btnOk"
            android:layout_alignParentRight="true"
            android:visibility="@{dialog.isCreateButtonVisible? View.VISIBLE : View.GONE}"
            android:text="@{config.createButtonText}"
            app:iconStart="@drawable/ic_create_new_case_black_24dp"
            app:buttonType="@{dialog.createButtonType}"
            app:rounded="@{dialog.isRounded}"
            app:slim="true"
            android:onClick="@{(view) -> createCallback.onCreateClick(view, data)}"
            />

        <de.symeda.sormas.app.component.controls.ControlButton
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/control_spacing"
            android:layout_alignParentRight="true"
            android:visibility="@{dialog.isOkButtonVisible? View.VISIBLE : View.GONE}"
            android:text="@{config.positiveButtonText}"
            app:iconStart="@drawable/ic_save_new_case_black_24dp"
            app:buttonType="@{dialog.okButtonType}"
            app:rounded="@{dialog.isRounded}"
            app:slim="true"
            android:onClick="@{(view) -> okCallback.onOkClick(view, data)}"
            />
    </RelativeLayout>

</layout>