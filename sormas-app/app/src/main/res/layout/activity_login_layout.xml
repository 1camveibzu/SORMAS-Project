<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>
        <variable name="data" type="de.symeda.sormas.app.login.LoginViewModel"/>
        <variable
            name="showNotificationCallback"
            type="de.symeda.sormas.app.component.OnShowInputErrorListener" />
        <variable
            name="hideNotificationCallback"
            type="de.symeda.sormas.app.component.OnHideInputErrorListener" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/parentLayoutHorizontalPadding"
            android:paddingRight="@dimen/parentLayoutHorizontalPadding"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >


            <ImageView
                android:id="@+id/sormas_logo"
                android:layout_width="@dimen/logoWidth"
                android:layout_height="@dimen/logoHeight"
                android:layout_marginTop="@dimen/logoMarginTop"
                android:layout_marginBottom="@dimen/logoMarginBottom"
                android:contentDescription="@string/sormas_logo_desc"
                android:src="@drawable/sormas_logo"/>

            <!-- Surveillance Outbreak -->
            <TextView
                android:id="@+id/textview_heading_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_heading_1"
                style="@style/LoginHeading1" />

            <!-- Response Managment & Analysis System -->
            <TextView
                android:id="@+id/textview_heading_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_heading_2"
                style="@style/LoginHeading2" />

            <!-- Disease Prevention . Disease Detection . Outbreak Response -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/serviceMarginBottom">

                <TextView
                    android:id="@+id/textview_service_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_1"
                    style="@style/LoginServiceText" />

                <View
                    android:id="@+id/service_separator_1"
                    style="@style/LoginServiceSeparator" />

                <TextView
                    android:id="@+id/textview_service_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_2"
                    style="@style/LoginServiceText" />

                <View
                    android:id="@+id/service_separator_2"
                    style="@style/LoginServiceSeparator" />

                <TextView
                    android:id="@+id/textview_service_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_3"
                    style="@style/LoginServiceText" />

            </LinearLayout>

            <!--@dimen/signinFormWidth-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_in"
                    style="@style/LoginSignInText" />
                <TextView
                    android:id="@+id/textview_signin_tagline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/signInTagLineMarginBottom"
                    android:text="@string/sign_in_tagline"
                    android:textColor="@color/text_70" />




                <de.symeda.sormas.app.component.TeboTextInputEditText
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:hint="@string/hint_username"
                    app:labelCaption="@string/label_username"
                    app:description="@string/desc_username"
                    app:required="true"
                    app:value="@={data.userName}"
                    app:inputType="text"
                    app:imeOptions="actionNext"
                    app:nextFocusUp="@id/txtUserName"
                    app:nextFocusLeft="@id/txtUserName"
                    app:nextFocusDown="@+id/txtPassword"
                    app:nextFocusRight="@+id/txtPassword"
                    app:onShowInputErrorListener="@{showNotificationCallback}"
                    app:onHideInputErrorListener="@{hideNotificationCallback}"
                    />

                <de.symeda.sormas.app.component.TeboPassword
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:hint="@string/hint_password"
                    app:labelCaption="@string/label_password"
                    app:description="@string/desc_password"
                    app:required="true"
                    app:value="@={data.password}"
                    app:passwordToggleEnabled="true"
                    app:inputType="textPassword"
                    app:imeOptions="actionNext"
                    app:nextFocusUp="@id/txtUserName"
                    app:nextFocusLeft="@id/txtUserName"
                    app:nextFocusDown="@+id/btnLogin"
                    app:nextFocusRight="@+id/btnLogin"
                    app:onShowInputErrorListener="@{showNotificationCallback}"
                    app:onHideInputErrorListener="@{hideNotificationCallback}"
                    />


                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/loginButtonMarginTop"
                    android:text="@string/action_login"
                    android:nextFocusUp="@id/txtPassword"
                    android:nextFocusLeft="@id/txtPassword"
                    android:nextFocusDown="@+id/btnChangeSettings"
                    android:nextFocusRight="@+id/btnChangeSettings"
                    style="@style/PrimaryButtonStyle"
                    android:onClick="login"
                    />

                <!---->
                <TextView
                    android:id="@+id/btnChangeSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_change_settings"
                    android:nextFocusUp="@id/btnLogin"
                    android:nextFocusLeft="@id/btnLogin"
                    style="@style/ChangeSettingStyle"
                    android:onClick="showSettingsView" />

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/notificationFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_gravity="top"
            android:orientation="vertical"
            android:elevation="8dp"
            android:background="@color/watchOut"
            android:paddingLeft="@dimen/rowListItemHorizontalMargin"
            android:paddingRight="@dimen/rowListItemHorizontalMargin"
            android:paddingTop="@dimen/rowListItemHorizontalMargin"
            android:paddingBottom="@dimen/rowListItemHorizontalMargin"
            android:visibility="gone"
            android:onClick="@{(v) -> hideNotificationCallback.onInputErrorHiding(v, false) }"
            >
            <TextView
                android:id="@+id/tvNotificationMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/whiteOpaque"
                android:text=""/>

        </LinearLayout>


    </FrameLayout>


</layout>