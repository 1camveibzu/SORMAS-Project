<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>
        <variable name="data" type="de.symeda.sormas.app.login.LoginViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/parentLayoutHorizontalPadding"
            android:paddingRight="@dimen/parentLayoutHorizontalPadding"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/logoWidth"
                android:layout_height="@dimen/logoHeight"
                android:layout_marginTop="@dimen/logoMarginTop"
                android:layout_marginBottom="@dimen/logoMarginBottom"
                android:contentDescription="@string/sormas_logo_desc"
                android:src="@drawable/sormas_logo" />

            <!-- SORMAS description texts -->

            <TextView
                android:id="@+id/heading_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_heading_1"
                style="@style/LoginHeading1" />

            <TextView
                android:id="@+id/heading_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_heading_2"
                style="@style/LoginHeading2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/serviceMarginBottom">

                <TextView
                    android:id="@+id/sub_heading_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_sub_heading_1"
                    style="@style/LoginSubHeadingText" />

                <View
                    android:id="@+id/sub_heading_separator_1"
                    style="@style/LoginSubHeadingSeparator" />

                <TextView
                    android:id="@+id/sub_heading_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_sub_heading_2"
                    style="@style/LoginSubHeadingText" />

                <View
                    android:id="@+id/sub_heading_separator_2"
                    style="@style/LoginSubHeadingSeparator" />

                <TextView
                    android:id="@+id/sub_heading_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_sub_heading_3"
                    style="@style/LoginSubHeadingText" />

            </LinearLayout>

            <!-- Sign In -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_sign_in"
                    style="@style/LoginSignInText" />

                <TextView
                    android:id="@+id/sign_in_tag_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_sign_in_tag_line"
                    style="@style/LoginSignInTagLineText" />

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:hint="@string/hint_login_username"
                    app:labelCaption="@string/label_login_username"
                    app:description="@string/desc_login_username"
                    app:required="true"
                    app:value="@={data.userName}"
                    app:inputType="text"

                     />

                <!--app:imeOptions="actionNext"-->
                <!--app:nextFocusUp="@id/txtUserName"-->
                <!--app:nextFocusLeft="@id/txtUserName"-->
                <!--app:nextFocusDown="@+id/txtPassword"-->
                <!--app:nextFocusRight="@+id/txtPassword"-->

                <de.symeda.sormas.app.component.controls.TeboPassword
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:hint="@string/hint_login_password"
                    app:labelCaption="@string/label_login_password"
                    app:description="@string/desc_login_password"
                    app:required="true"
                    app:value="@={data.password}"
                    app:passwordToggleEnabled="true"
                    app:inputType="textPassword"

                     />

                <!--app:imeOptions="actionNext"-->
                <!--app:nextFocusUp="@id/txtUserName"-->
                <!--app:nextFocusLeft="@id/txtUserName"-->
                <!--app:nextFocusDown="@+id/btnLogin"-->
                <!--app:nextFocusRight="@+id/btnLogin"-->

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/loginButtonMarginTop"
                    android:text="@string/action_login"
                    android:nextFocusForward="@+id/btn_change_settings"
                    style="@style/PrimaryButtonStyle"
                    android:onClick="login" />

                <!--android:nextFocusUp="@id/txtPassword"-->
                <!--android:nextFocusLeft="@id/txtPassword"-->
                <!--android:nextFocusDown="@+id/btnChangeSettings"-->
                <!--android:nextFocusRight="@+id/btnChangeSettings"-->

                <!--<TextView-->
                    <!--android:id="@+id/btn_change_settings"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="@string/login_change_settings"-->
                    <!--android:nextFocusUp="@id/btnLogin"-->
                    <!--android:nextFocusLeft="@id/btnLogin"-->
                    <!--style="@style/ChangeSettingStyle"-->
                    <!--android:onClick="showSettingsView" />-->

                <Button
                    android:id="@+id/btn_change_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_change_settings"
                    style="@style/SubtleButtonStyle"
                    android:onClick="showSettingsView" />

            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/notificationFrame"
            layout="@layout/activity_root_notification_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

</layout>