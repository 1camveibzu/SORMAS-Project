<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>
        <import type="de.symeda.sormas.app.util.SampleHelper" />
        <import type="de.symeda.sormas.app.core.YesNo" />

        <variable name="data" type="de.symeda.sormas.app.backend.sample.Sample"/>
        <variable name="caze" type="de.symeda.sormas.app.backend.caze.Case"/>
        <variable name="lab" type="de.symeda.sormas.app.backend.facility.Facility"/>

        <variable name="yesNoClass" type="Class" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/parentLayoutVerticalMargin"
                android:paddingLeft="@dimen/parentLayoutHorizontalPadding"
                android:paddingRight="@dimen/parentLayoutHorizontalPadding"
                >


                <de.symeda.sormas.app.component.controls.ControlTextReadField
                    android:id="@+id/caseData_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/controlReadTextMarginBottom"
                    app:value="@{data.associatedCase.person}" />


                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/sample_sampleCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:value="@={data.sampleCode}" />


                <de.symeda.sormas.app.component.controls.ControlDateTimeField
                    android:id="@+id/sample_sampleDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:dateHint="@string/hint_sample_date_of_sampling"
                    app:timeHint="@string/hint_sample_time_of_sampling"
                    app:required="true"
                    app:value="@={data.sampleDateTime}" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <de.symeda.sormas.app.component.controls.ControlSpinnerField
                        android:id="@+id/sample_sampleMaterial"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/textControlMarginBottom"
                        app:required="true"
                        app:value="@={data.sampleMaterial}" />

                    <de.symeda.sormas.app.component.controls.ControlTextEditField
                        android:id="@+id/sample_sampleMaterialText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/textControlMarginBottom"
                        android:layout_marginStart="@dimen/control_spacing"
                        app:required="true"
                        app:value="@={data.sampleMaterialText}" />

                </LinearLayout>

                <de.symeda.sormas.app.component.controls.ControlSpinnerField
                    android:id="@+id/sample_sampleSource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:value="@={data.sampleSource}" />


                <de.symeda.sormas.app.component.controls.ControlSpinnerField
                    android:id="@+id/sample_suggestedTypeOfTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:value="@={data.suggestedTypeOfTest}" />

                <de.symeda.sormas.app.component.controls.ControlSpinnerField
                    android:id="@+id/sample_lab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:required="true"
                    app:value="@={data.lab}" />

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/sample_labDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:required="true"
                    app:value="@={data.labDetails}" />

                <ImageView android:id="@+id/divShippingStatusTop" style="@style/MiniHorizontalDividerStyle"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <de.symeda.sormas.app.component.controls.ControlCheckBoxField
                        android:id="@+id/sample_shipped"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/textControlMarginBottom"
                        app:value="@={data.shipped}" />

                    <de.symeda.sormas.app.component.controls.ControlDateField
                        android:id="@+id/sample_shipmentDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/textControlMarginBottom"
                        android:layout_marginStart="@dimen/control_spacing"
                        app:required="true"
                        app:value="@={data.shipmentDate}" />

                </LinearLayout>

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/sample_shipmentDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:value="@={data.shipmentDetails}" />

                <LinearLayout
                    android:id="@+id/sampleReceivedLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/heading_sub_sample_received"
                        style="@style/SubHeadingStyle"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <de.symeda.sormas.app.component.controls.ControlTextReadField
                            android:id="@+id/sample_labSampleID"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginBottom="@dimen/controlReadTextMarginBottom"
                            app:value="@{data.labSampleID}" />

                        <de.symeda.sormas.app.component.controls.ControlTextReadField
                            android:id="@+id/sample_receivedDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/control_spacing"
                            android:layout_marginBottom="@dimen/controlReadTextMarginBottom"
                            app:value="@{data.receivedDate}" />

                    </LinearLayout>

                    <de.symeda.sormas.app.component.controls.ControlTextReadField
                        android:id="@+id/sample_specimenCondition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/controlReadTextMarginBottom"
                        app:value="@{data.specimenCondition}" />

                    <de.symeda.sormas.app.component.controls.ControlTextReadField
                        android:id="@+id/sample_noTestPossibleReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/controlReadTextMarginBottom"
                        app:value="@{data.noTestPossibleReason}" />

                </LinearLayout>


                <ImageView android:id="@+id/divShippingStatusBottom" style="@style/MiniHorizontalDividerStyle"/>

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/sample_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:value="@={data.comment}" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>




</layout>

