<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>
        <import type="android.view.View" />
        <import type="de.symeda.sormas.app.component.TeboButtonType"/>
        <variable name="data" type="Object"/>
        <variable name="config" type="de.symeda.sormas.app.component.dialog.DialogViewConfig"/>
        <variable name="dialog" type="de.symeda.sormas.app.component.dialog.BaseTeboAlertDialog" />
        <variable
            name="dismissCallback"
            type="de.symeda.sormas.app.component.dialog.IDialogDismissOnClickListener" />
        <variable
            name="okCallback"
            type="de.symeda.sormas.app.component.dialog.IDialogOkOnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/rowListItemHorizontalMargin"
        android:paddingRight="@dimen/rowListItemHorizontalMargin"
        android:visibility="@{dialog.isButtonPanelVisible? View.VISIBLE : View.GONE}"
        >

        <de.symeda.sormas.app.component.TeboButton
            android:id="@+id/btnDismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_alignParentLeft="true"
            android:visibility="@{dialog.isDismissButtonVisible? View.VISIBLE : View.GONE}"
            app:text="@{config.negativeButtonText}"
            app:drawableLeft="@drawable/ic_clear_black_24dp"
            app:buttonType="@{dialog.dismissButtonType}"
            app:rounded="@{dialog.isRounded}"
            app:iconOnly="@{dialog.iconOnlyDismissButtons}"
            app:onButtonOnClick="@{(view) -> dismissCallback.onDismissClick(view, data)}"
            />

        <de.symeda.sormas.app.component.TeboButton
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/formLayoutGutterSize"
            android:layout_alignParentRight="true"
            android:visibility="@{dialog.isOkButtonVisible? View.VISIBLE : View.GONE}"
            app:text="@{config.positiveButtonText}"
            app:drawableLeft="@drawable/ic_done_black_24dp"
            app:buttonType="@{dialog.okButtonType}"
            app:rounded="@{dialog.isRounded}"
            app:iconOnly="@{dialog.iconOnlyOkButtons}"
            app:onButtonOnClick="@{(view) -> okCallback.onOkClick(view, data)}"
            />
    </RelativeLayout>

</layout>