<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>

        <variable name="data" type="de.symeda.sormas.app.backend.person.Person"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <de.symeda.sormas.app.component.controls.ControlTextEditField
            android:id="@+id/txtCauseOfDeathDisease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textControlMarginBottom"
            app:hint="@string/hint_event_pinvolv_other_cause_of_death"
            app:labelCaption="@string/label_event_pinvolv_other_cause_of_death"
            app:description="@string/desc_event_pinvolv_other_cause_of_death"
            app:required="true"
            app:value="@={data.causeOfDeathDetails}"
            app:imeOptions="actionNext"


            />

    </LinearLayout>

</layout>

