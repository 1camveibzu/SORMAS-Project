<?xml version="1.0" encoding="utf-8"?>
<merge  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/captionFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/lblControlLabel"
                android:labelFor="@+id/txtControlInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/controlLabelColor"
                android:textSize="@dimen/controlLabelSize"
                android:paddingTop="@dimen/controlLabelMarginTop"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true"
                android:focusable="true"
                android:clickable="true"
                android:focusableInTouchMode="true" />
            <TextView
                android:id="@+id/lblRequired"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:paddingLeft="@dimen/contentHorizontalSpacing"
                android:text="*"
                android:textColor="@color/watchOut"
                android:textSize="@dimen/controlLabelSize"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:id="@+id/lblSoftRequired"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:paddingLeft="@dimen/contentHorizontalSpacing"
                android:text="*"
                android:textColor="@color/warning"
                android:textSize="@dimen/controlLabelSize"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtControlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/controlTextViewBackground"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:textColor="@color/controlTextColor"
            android:textIsSelectable="false"
            android:textSize="@dimen/defaultHintControlTextSize"
            />

    </LinearLayout>
</merge>
