<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>
        <import type="de.symeda.sormas.api.utils.YesNoUnknown" />

        <variable name="data" type="de.symeda.sormas.app.backend.event.EventParticipant"/>


        <variable name="presentConditionClass" type="Class" />


        <variable
            name="addressLinkCallback"
            type="de.symeda.sormas.app.core.IEntryItemOnClickListener" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/parentLayoutVerticalMargin"
            android:paddingLeft="@dimen/parentLayoutHorizontalPadding"
            android:paddingRight="@dimen/parentLayoutHorizontalPadding"
            >

            <de.symeda.sormas.app.component.controls.ControlTextEditField
                android:id="@+id/txtInvolvementDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/textControlMarginBottom"
                app:hint="@string/hint_event_pinvolv_desc"
                app:labelCaption="@string/label_event_pinvolv_desc"
                app:description="@string/desc_event_pinvolv_desc"
                app:required="true"
                app:value="@={data.involvementDescription}"
                app:imeOptions="actionNext"


                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/txtLastName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:hint="@string/hint_event_pinvolv_last_name"
                    app:labelCaption="@string/label_event_pinvolv_last_name"
                    app:description="@string/desc_event_pinvolv_last_name"
                    app:required="true"
                    app:value="@={data.person.lastName}"
                    app:imeOptions="actionNext"


                    />

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/txtFirstName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    android:paddingLeft="@dimen/formLayoutGutterSize"
                    app:hint="@string/hint_event_pinvolv_first_name"
                    app:labelCaption="@string/label_event_pinvolv_first_name"
                    app:description="@string/desc_event_pinvolv_first_name"
                    app:required="true"
                    app:value="@={data.person.firstName}"
                    app:imeOptions="actionNext"


                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/txtNickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:hint="@string/hint_event_pinvolv_nickname"
                    app:labelCaption="@string/label_event_pinvolv_nickname"
                    app:description="@string/desc_event_pinvolv_nickname"
                    app:required="true"
                    app:value="@={data.person.nickname}"
                    app:imeOptions="actionNext"


                    />


                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/txtMotherMaidenName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    android:paddingLeft="@dimen/formLayoutGutterSize"
                    app:hint="@string/hint_event_pinvolv_mum_maiden_name"
                    app:labelCaption="@string/label_event_pinvolv_mum_maiden_name"
                    app:description="@string/desc_event_pinvolv_mum_maiden_name"
                    app:required="true"
                    app:value="@={data.person.mothersMaidenName}"
                    app:imeOptions="actionNext"


                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <de.symeda.sormas.app.component.controls.ControlSpinnerField
                    android:id="@+id/spnYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:hint="@string/hint_event_pinvolv_year"
                    app:labelCaption="@string/label_event_pinvolv_year"
                    app:description="@string/desc_event_pinvolv_year"
                    app:required="true"

                    app:value="@={data.person.birthdateYYYY}"
                    />


                <de.symeda.sormas.app.component.controls.ControlSpinnerField
                    android:id="@+id/spnMonth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    android:paddingLeft="@dimen/formLayoutGutterSize"
                    app:hint="@string/hint_event_pinvolv_month"
                    app:labelCaption="@string/label_event_pinvolv_month"
                    app:description="@string/desc_event_pinvolv_month"
                    app:required="true"

                    app:value="@={data.person.birthdateMM}"
                    />


                <de.symeda.sormas.app.component.controls.ControlSpinnerField
                    android:id="@+id/spnDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    android:paddingLeft="@dimen/formLayoutGutterSize"
                    app:hint="@string/hint_event_pinvolv_date"
                    app:labelCaption="@string/label_event_pinvolv_date"
                    app:description="@string/desc_event_pinvolv_date"
                    app:required="true"

                    app:value="@={data.person.birthdateDD}"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <de.symeda.sormas.app.component.controls.ControlTextReadField
                    android:id="@+id/txtAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/controlReadTextMarginBottom"
                    app:description="@string/desc_event_pinvolv_age"
                    app:labelCaption="@string/label_event_pinvolv_age"
                    app:distinct="true"
                    app:value="@{data.person.approximateAge}"
                    app:appendValue="@{data.person.approximateAgeType.toString()}"
                    app:valueFormat="@{@string/two_words_spaced_format}"
                    app:defaultValue='@{@string/age_unknown}'
                    />


                <de.symeda.sormas.app.component.controls.ControlSpinnerField
                    android:id="@+id/spnAgeType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    android:paddingLeft="@dimen/formLayoutGutterSize"
                    app:hint="@string/hint_event_pinvolv_age_unit"
                    app:labelCaption="@string/label_event_pinvolv_age_unit"
                    app:description="@string/desc_event_pinvolv_age_unit"
                    app:required="true"

                    app:value="@={data.person.approximateAgeType}"
                    />


            </LinearLayout>


            <de.symeda.sormas.app.component.controls.ControlSpinnerField
                android:id="@+id/spnGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/textControlMarginBottom"
                app:hint="@string/hint_event_pinvolv_gender"
                app:labelCaption="@string/label_event_pinvolv_gender"
                app:description="@string/desc_event_pinvolv_gender"
                app:required="true"

                app:value="@={data.person.sex}"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/txtPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    app:hint="@string/hint_event_pinvolv_pnumber"
                    app:labelCaption="@string/label_event_pinvolv_pnumber"
                    app:description="@string/desc_event_pinvolv_pnumber"
                    app:required="true"
                    app:value="@={data.person.phone}"
                    app:imeOptions="actionNext"


                    />

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/txtPhoneNumberOwner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/textControlMarginBottom"
                    android:paddingLeft="@dimen/formLayoutGutterSize"
                    app:hint="@string/hint_event_pinvolv_pnumber_owner"
                    app:labelCaption="@string/label_event_pinvolv_pnumber_owner"
                    app:description="@string/desc_event_pinvolv_pnumber_owner"
                    app:required="true"
                    app:value="@={data.person.phoneOwner}"
                    app:imeOptions="actionNext"


                    />

            </LinearLayout>


            <de.symeda.sormas.app.component.controls.ControlSwitchField
                android:id="@+id/swhPresentCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/textControlMarginBottom"
                app:hint="@string/hint_event_pinvolv_present_condition"
                app:labelCaption="@string/label_event_pinvolv_present_condition"
                app:description="@string/desc_event_pinvolv_present_condition"
                app:required="true"
                app:slim="false"
                app:enumClass="@{presentConditionClass}"
                app:defaultValue="@{null}"
                app:value="@={data.person.presentCondition}"


                />

            <include android:id="@+id/presentConditionInclude"
                layout="@layout/blank_layout"
                />

            <de.symeda.sormas.app.component.controls.ControlTextPopupField
                android:id="@+id/txtPermAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/textControlMarginBottom"
                app:iconStart="@drawable/ic_edit_location_black_24dp"
                app:hint="@string/hint_event_pinvolv_perm_res_addy"
                app:labelCaption="@string/label_event_pinvolv_perm_res_addy"
                app:description="@string/desc_event_pinvolv_perm_res_addy"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/heading_sub_event_pinvolv_occupation"
                style="@style/SubHeadingStyle"
                />


            <de.symeda.sormas.app.component.controls.ControlSpinnerField
                android:id="@+id/spnOccupationType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/textControlMarginBottom"
                app:hint="@string/hint_event_pinvolv_occupation_type"
                app:labelCaption="@string/label_event_pinvolv_occupation_type"
                app:description="@string/desc_event_pinvolv_occupation_type"
                app:required="true"

                app:value="@={data.person.occupationType}"
                />

            <include android:id="@+id/occupationDetailsInclude"
                layout="@layout/blank_layout"
                />

        </LinearLayout>

    </ScrollView>

</layout>

