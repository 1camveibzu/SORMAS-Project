<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/defaultControlStrokeWidth" android:color="@color/successButtonPressed" />
            <!--<solid android:color="@color/successButtonPressed"/>-->
            <corners android:radius="@dimen/defaultButtonRadius" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/defaultControlStrokeWidth" android:color="@color/successButtonFocused" />
            <!--<solid android:color="@color/successButtonFocused"/>-->
            <corners android:radius="@dimen/defaultButtonRadius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/defaultControlStrokeWidth" android:color="@color/successButton" />
            <!--<solid android:color="@color/successButton"/>-->
            <corners android:radius="@dimen/defaultButtonRadius" />
        </shape>
    </item>
</selector>