<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/controlTextViewBackground" />
        </shape>
    </item>
    <item android:top="@dimen/pinInputStrokeWidthOffset" android:right="@dimen/pinInputStrokeWidthOffset"
        android:bottom="@dimen/pinInputStrokeWidthOffset" android:left="@dimen/pinInputStrokeWidthOffset">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/pinInputStrokeWidth"
                android:color="@android:color/transparent" />

            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>