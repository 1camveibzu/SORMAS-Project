<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/listActivityRowBackground"/>
        </shape>
    </item>
    <item
        android:left="@dimen/listActivityRowItemBorderLeft"
        android:right="@dimen/listActivityRowItemBorderRight"
        android:top="@dimen/listActivityRowItemBorderTop">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="@dimen/listActivityRowItemBorderWidth"
                android:color="@color/listActivityRowBorder"/>
        </shape>
    </item>
