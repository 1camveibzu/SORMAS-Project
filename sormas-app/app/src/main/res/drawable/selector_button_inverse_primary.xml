<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryInverseButtonPressed"/>
            <corners android:radius="@dimen/defaultButtonRadius" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryInverseButtonFocused"/>
            <corners android:radius="@dimen/defaultButtonRadius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryInverseButton"/>
            <corners android:radius="@dimen/defaultButtonRadius" />
        </shape>
    </item>
</selector>