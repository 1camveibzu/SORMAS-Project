<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle">
        <stroke android:width="@dimen/defaultControlStrokeWidth" android:color="@color/secondaryButtonPressed" />
        <solid android:color="@color/secondaryButtonPressed"/>
        <corners android:radius="@dimen/defaultButtonRadius" />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle">
        <stroke android:width="@dimen/defaultControlStrokeWidth" android:color="@color/secondaryButtonFocused" />
        <solid android:color="@color/secondaryButtonFocused"/>
        <corners android:radius="@dimen/defaultButtonRadius" />
    </shape>
</item>
<item>
    <shape android:shape="rectangle">
        <stroke android:width="@dimen/defaultControlStrokeWidth" android:color="@color/secondaryButton" />
        <solid android:color="@color/secondaryButton"/>
        <corners android:radius="@dimen/defaultButtonRadius" />
    </shape>
</item>
</selector>