<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/defaultControlBackground"/>
                    <corners android:radius="@dimen/defaultControlRadius"/>
                    <stroke android:width="@dimen/defaultControlStrokeWidth"
                            android:color="@color/controlTextViewDisabledStroke"/>
                </shape>
            </item>
            <item android:right="@dimen/contentHorizontalSpacing">
                <bitmap android:width="@dimen/spinnerIconWidth"
                        android:height="@dimen/spinnerIconHeight"
                        android:gravity="right|center_vertical"
                        android:src="@drawable/ic_spinner_arrow_down_disabled"/>
            </item>
        </layer-list>
    </item>
    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/defaultControlBackground"/>
                    <corners android:radius="@dimen/defaultControlRadius"/>
                    <stroke android:width="@dimen/defaultControlStrokeWidth"
                            android:color="@color/controlStrokeActivated"/>
                </shape>

            </item>
            <item android:right="@dimen/contentHorizontalSpacing">
                <bitmap android:width="@dimen/spinnerIconWidth"
                        android:height="@dimen/spinnerIconHeight"
                        android:gravity="right|center_vertical"
                        android:src="@drawable/ic_spinner_arrow_down_activated"/>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/defaultControlBackground"/>
                    <corners android:radius="@dimen/defaultControlRadius"/>
                    <stroke android:width="@dimen/defaultControlStrokeWidth"
                            android:color="@color/controlStrokeActivated"/>
                </shape>

            </item>
            <item android:right="@dimen/contentHorizontalSpacing">
                <bitmap android:width="@dimen/spinnerIconWidth"
                        android:height="@dimen/spinnerIconHeight"
                        android:gravity="right|center_vertical"
                        android:src="@drawable/ic_spinner_arrow_down_activated"/>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/defaultControlBackground"/>
                    <corners android:radius="@dimen/defaultControlRadius"/>
                    <stroke android:width="@dimen/defaultControlStrokeWidth"
                            android:color="@color/controlStrokeActivated"/>
                </shape>
            </item>
            <item android:right="@dimen/contentHorizontalSpacing">
                <bitmap android:width="@dimen/spinnerIconWidth"
                        android:height="@dimen/spinnerIconHeight"
                        android:gravity="right|center_vertical"
                        android:src="@drawable/ic_spinner_arrow_down_activated"/>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/defaultControlBackground"/>
                    <corners android:radius="@dimen/defaultControlRadius"/>
                    <stroke android:width="@dimen/defaultControlStrokeWidth"
                            android:color="@color/controlStrokeActivated"/>
                </shape>

            </item>
            <item android:right="@dimen/contentHorizontalSpacing">
                <bitmap android:width="@dimen/spinnerIconWidth"
                        android:height="@dimen/spinnerIconHeight"
                        android:gravity="right|center_vertical"
                        android:src="@drawable/ic_spinner_arrow_down_activated"/>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/defaultControlBackground"/>
                    <corners android:radius="@dimen/defaultControlRadius"/>
                    <stroke android:width="@dimen/defaultControlStrokeWidth"
                            android:color="@color/controlStrokeNormal"/>
                </shape>

            </item>
            <item android:right="@dimen/contentHorizontalSpacing">
                <bitmap android:width="@dimen/spinnerIconWidth"
                        android:height="@dimen/spinnerIconHeight"
                        android:gravity="right|center_vertical"
                        android:src="@drawable/ic_spinner_arrow_down_normal"/>
            </item>
        </layer-list>
    </item>
</selector>