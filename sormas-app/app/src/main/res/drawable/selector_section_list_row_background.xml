<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_selected="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/sectionListRowPressedBackground" />
            <stroke android:color="@color/sectionListRowStroke" android:width="@dimen/sectionListRowStrokeWidth" />
            <corners android:radius="@dimen/sectionListRowRadius" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/sectionListRowPressedBackground" />
            <stroke android:color="@color/sectionListRowStroke" android:width="@dimen/sectionListRowStrokeWidth" />
            <corners android:radius="@dimen/sectionListRowRadius" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/sectionListRowFocusedBackground" />
            <stroke android:color="@color/sectionListRowStroke" android:width="@dimen/sectionListRowStrokeWidth" />
            <corners android:radius="@dimen/sectionListRowRadius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/sectionListRowBackground" />
            <stroke android:color="@color/sectionListRowStroke" android:width="@dimen/sectionListRowStrokeWidth" />
            <corners android:radius="@dimen/sectionListRowRadius" />
        </shape>
    </item>
</selector>