<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.symeda.sormas.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name=".SormasApplication"
        android:allowBackup="true"
        android:icon="@mipmap/sormas_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".caze.CasesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".caze.CaseEditActivity"
            android:parentActivityName=".caze.CasesActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".caze.CasesActivity" />
        </activity>
        <activity
            android:name=".caze.CaseNewActivity"
            android:parentActivityName=".caze.CasesActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".caze.CasesActivity" />
        </activity>
        <activity android:name=".contact.ContactsActivity"></activity>
        <activity android:name=".user.UserActivity"></activity>
        <activity android:name=".task.TasksActivity"></activity>
        <activity
            android:name=".task.TaskEditActivity"
            android:parentActivityName=".task.TasksActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".task.TasksActivity" />
        </activity>

        <activity
            android:name=".contact.ContactNewActivity"
            android:parentActivityName=".caze.CaseEditActivity"></activity>
        <activity
            android:name=".contact.ContactEditActivity"
            android:parentActivityName=".caze.CaseEditActivity"></activity>

        <activity android:name=".visit.VisitEditActivity"
            android:parentActivityName=".contact.ContactEditActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".contact.ContactEditActivity" />
        </activity>

        <activity android:name=".event.EventsActivity"></activity>
        <activity android:name=".event.EventEditActivity"
            android:parentActivityName=".event.EventsActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".event.EventsActivity" />
        </activity>
        <activity android:name=".event.EventParticipantEditActivity"
            android:parentActivityName=".event.EventParticipantEditActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".event.EventsActivity" />
        </activity>




        <activity android:name=".sample.SamplesActivity"></activity>
        <activity android:name=".sample.SampleEditActivity"
            android:parentActivityName=".sample.SamplesActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".sample.SamplesActivity" />
        </activity>

        <receiver android:name=".SormasBootstrap"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>

        <service android:enabled="true" android:name=".task.TaskNotificationService" />

        <!--
     ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>